<h2>Оформление заказа</h2>
@model WebApplication3.Models.Order
@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    <div>
        Ваш персональный номер(id): @Html.TextBoxFor(model => model.Customer_Id)
        @Html.ValidationMessageFor(model => model.Customer_Id)
    </div>
    <div>
        Название: @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div>
        Цена: @Html.TextBoxFor(model => model.Price, new { @type = "number" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>
    <div>
    <input type="submit" value="Create" />
</div>
}